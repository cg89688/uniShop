.goods_item .swiper {
  width: 750rpx;
  height: 700rpx;
}
.goods_item .swiper .image {
  width: 100%;
  height: 100%;
}
.goods_item .pric {
  font-size: 38rpx;
  color: #b50e03;
  line-height: 80rpx;
}
.goods_item .pric text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.goods_item .name {
  font-size: 32rpx;
  line-height: 60rpx;
}
.goods_item .line {
  height: 10rpx;
  background: #eee;
}
.goods_item .tit {
  text-align: center;
  font-size: 38rpx;
  line-height: 80rpx;
  border-bottom: solid 1px #ccc;
}
.goods_item .attr_item {
  font-size: 28rpx;
  line-height: 58rpx;
  border-bottom: solid 1px #eee;
}
.goods_item .attr_item text:nth-child(2) {
  margin-left: 10rpx;
  color: gray;
}
.goods_item .introduce {
  padding-bottom: 50px;
}
.goods_item .good_nav {
  position: fixed;
  bottom: 0;
  width: 100%;
